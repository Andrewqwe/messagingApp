<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1"
    android:background="?android:selectableItemBackground"
    android:clickable="true"
    android:gravity="center_vertical"
    android:paddingTop="2dp"
    android:paddingBottom="5dp"
    android:paddingStart="5dp"
    android:paddingEnd="5dp">

    <ImageButton
        android:id="@+id/chatProfileImageButton"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@drawable/chat_profile_picture_imageshape"
        app:srcCompat="@color/colorAccent"
        />
    <TextView
        android:id="@+id/otherMessageTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/chatProfileImageButton"
        android:layout_alignBottom="@+id/chatProfileImageButton"
        android:textColor="@color/black"
        android:layout_margin="5dp"
        android:background="@drawable/message_box"
        android:padding="5dp"
        android:text="lololololololololololololololololololol"
        />

</RelativeLayout>